<% flash.each do |type, message| %>
  <div class="alert alert-<%= type.to_s.downcase %> alert-dismissable alert-flash fade in">
    <button class='close' type='button' data-dismiss='alert' data-aria-label='Close' />
      <span aria-hidden='true'>
        &times;
      </span>
    <%= message %>
  </span>
<% end %>